CREATE TABLE projects (
    id SERIAL PRIMARY KEY,
    title TEXT NOT NULL,
    state TEXT,
    lga TEXT,
    ward TEXT,
    community TEXT,
    contractor TEXT,
    lot TEXT NOT NULL,
    phase TEXT,
    state_supervisor TEXT,
    lga_supervisor TEXT,
    status TEXT,
    coverage TEXT,
    longitude double precision,
    latitude double precision,
    stage TEXT,
    completion_status TEXT,
    gps TEXT,
    date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW()
    );
CREATE TABLE reports (
    id SERIAL PRIMARY KEY,
    project_id INTEGER REFERENCES projects(id),
    filename TEXT,
    file_url TEXT,
    title TEXT,
    date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);
    CREATE TABLE project_files (
        id SERIAL PRIMARY KEY,
        project_id INTEGER REFERENCES projects(id),
        file_path TEXT NOT NULL,
        date_uploaded TIMESTAMP WITH TIME ZONE DEFAULT NOW()
    );

    CREATE TABLE odf (
        id SERIAL PRIMARY KEY,
        lga TEXT,
        no_of_communities INTEGER,
        no_of_certified INTEGER,
        date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
        date_updated TIMESTAMP WITH TIME ZONE DEFAULT NOW()

    );

    CREATE TABLE users (
        id SERIAL PRIMARY KEY,
        full_name TEXT NOT NULL,
        email TEXT UNIQUE NOT NULL,
        password TEXT NOT NULL,
        role TEXT NOT NULL,
        date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
        phone_number TEXT,
        lga TEXT
    );

    CREATE TABLE functionality_reports (
        id SERIAL PRIMARY KEY,
        project_id INTEGER REFERENCES projects(id),
        file_url TEXT,
        title TEXT,
        status boolean,
        recommendation TEXT,
        sender TEXT,
        issue TEXT,
        longitude double precision,
        latitude double precision,
        date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW()
    );

    CREATE TABLE odf_status (
        id SERIAL PRIMARY KEY,
        lga TEXT,
        ward TEXT,
        community TEXT,
        status TEXT,
        date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
        sender TEXT
    );

    CREATE TABLE daily_reports (
        id SERIAL PRIMARY KEY,
        project_id INTEGER REFERENCES projects(id),
        file_url TEXT,
        title TEXT,
        date TEXT,
        longitude double precision,
        latitude double precision,
        activity TEXT,
        outcome TEXT,
        project_stage TEXT,
        lga_sup_id INTEGER,
        state_sup_id INTEGER,
        date_created TIMESTAMP WITH TIME ZONE DEFAULT NOW()
    );